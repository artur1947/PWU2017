<Page
    x:Class="PWU2017.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PWU2017"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <CommandBar Background="RoyalBlue" RequestedTheme="Dark">
            <CommandBar.Content>
                <TextBlock Margin="12,8" FontSize="24" Text ="Notatnik" />
            </CommandBar.Content>
            <!--Button 3 kropki-->
            <AppBarToggleButton x:Name="toggleButton" Icon="ClosePane" Label="Details" IsChecked="{Binding IsPaneOpen, ElementName=splitView, Mode=TwoWay}" />
            
        </CommandBar>
        <!--Button chowający lewy panel boczny-->
        <SplitView x:Name="splitView" Grid.Row="1">
         
            <SplitView.Pane>
                <Rectangle Fill="CornflowerBlue"/>
            </SplitView.Pane>
            <SplitView.Content>
                <TextBox x:Name="textBox" TextWrapping="Wrap"/>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>
